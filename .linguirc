{
  "locales": [
    "en",
    "zh",
    "kr",
    "ru"
  ],
  "catalogs": [
    {
      "path": "src/locales/{locale}/messages",
      "include": [
        "src",
        "pages"
      ]
    }
  ],
  "format": "po",
  "formatOptions": {
    "origins": false,
    "lineNumbers": false
  },
  "orderBy": "messageId",
  "sourceLocale": "en",
  "fallbackLocales": {
    "default": "en"
  }
}